/* 弹框 */
.modal-pop {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-pop-content {
  position: absolute;
  width: 540rpx;
  height: 460rpx;
  top: 50%;
  left: 70rpx;
  margin-top: -250rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 40rpx;
}

.modal-pop-logo {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.modal-pop-logo image {
  width: 100rpx;
  height: 100rpx;
}
.modal-pop-tips {
  font-size: 35rpx;
  margin: auto;
  display: block;
  text-align: center;
  line-height: 40rpx;
  height: 40rpx;
  padding-bottom: 30rpx;
  width: 500rpx;
  border-bottom: 1rpx solid #ccc;
  margin-bottom: 40rpx;
}

.modal-pop-authorize-list {
  font-size: 30rpx;
  text-align: center;
  color: #ccc;
  margin-bottom: 80rpx;
}

.primary-btn {
  background: #07c160;
  color: #fff;
  display: flex;
  font-size: 35rpx;
  justify-content: center;
  align-items: center;
  width: 550rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin: auto;
}